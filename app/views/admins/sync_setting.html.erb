<% content_for :title, 'Sync Property' %>
<p id="notice"><%= notice %></p>
<% url = @admin_variable.new_record? ? update_sync_setting_admin_path : update_sync_setting_admin_path(id: @admin_variable) %>
<%= form_for @admin_variable, url: url, method: :patch do |f| %>

  <div id="title-bar">
    <h1>Sync Property</h1>
    <div class="actions d-flex btn-group justify-content-end push">
      <%= link_to 'Back', admin_path, class: 'ml-2 btn btn-secondary mr-2' %>
      <%= f.button 'Save', class: 'btn btn-primary' %>
    </div>
  </div>
  <article>
    <div class="col-md-12">
      <div class="form-group row">
        <%= f.label :rightmove, class:'col-sm-1' %>
        <%= f.check_box :rightmove, class: 'col-sm-1' %>
      </div>
      <div class="form-group row">
        <%= f.label :zoopla, class: 'col-sm-1' %>
        <%= f.check_box :zoopla, class: 'col-sm-1' %>
      </div>
      <div class="form-group row">
        <%= f.label :onthemarket, class: 'col-sm-1' %>
        <%= f.check_box :onthemarket, class: 'col-sm-1' %>
      </div>
    </div>
  </article>
<% end %>
