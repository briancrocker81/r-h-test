<div class="modal-dialog">
  <div class="modal-content">
    <div class="modal-header">
      <h3 class="modal-title" id="exampleModalLabel">Messages</h3>
      <button type="button" class="close" data-dismiss="modal" aria-label="Close">
        <span aria-hidden="true">&times;</span>
      </button>
    </div>
    <div class="modal-body">
      <div class="row">
        <div class="col-md-12">
          <%= render(partial: 'conversation_list_style', locals: { conversation: @message.landlord_staff_conversation } ) %>
        </div>
      </div>
      <hr>
      <%= form_tag landlord_staff_conversation_landlord_staff_messages_path(@message.landlord_staff_conversation_id, message_id: @message.id), :method => :post, html: {multipart: true}, style: "width: 100%; padding: 16px;" do %>
        <div class="form-group">
          <div class="row">
            <div class="col-md-12">
              <label>Subject: </label>
              <%= text_field_tag "subject",'', class: "form-control form-inputs", placeholder: "Subject", required: true %>
            </div>
          </div>
          <div class="row">
            <div class="col-md-12">
              <label>Content: </label>
              <%= text_area_tag "body", nil,"cols" => 50, "rows" => 4, class: "form-control form-inputs", placeholder: "Type here your message.....", required: true %>
            </div>
          </div><br>
          <%= button_tag(type: "submit", class: "btn btn-primary") do %>
            Save
          <% end %>
        </div>
      <% end %>
    </div>
  </div>
</div>