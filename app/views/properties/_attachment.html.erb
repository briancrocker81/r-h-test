<div class="modal-dialog">
  <div class="modal-content">
    <div class="modal-header">
      <h3 class="modal-title" id="exampleModalLabel">Update Attachment </h3>
      <button type="button" class="close" data-dismiss="modal" aria-label="Close">
        <span aria-hidden="true">&times;</span>
      </button>
    </div>
    <%= simple_form_for @attachment, url: property_update_attachment_path(@property, id: @attachment.id), method: :patch, remote: true do |f| %>
      <div class="modal-body">
        <div class="form-group">
          <h3 class="modal-section-title">Title</h3>
          <div class="row">
            <div class="col-md-12">
              <%= f.text_field :title, class: 'form-control', value: @attachment.title %>
            </div>
          </div>
        </div>
        <div class="form-group">
          <h3 class="modal-section-title">Alt Tag</h3>
          <div class="row">
            <div class="col-md-12">
              <%= f.text_field :alt_tag, class: 'form-control', value: @attachment.alt_tag %>
            </div>
          </div>
        </div>
      </div>
      <div class="modal-footer">
        <button type="submit" class="btn btn-primary">Submit</button>
      </div>
    <% end %>
  </div>
</div>
