<article class="details">
  <div class="row">
    <div class="col-12 mb-2">
      <h2><i class="fas fa-user-friends" title="Co-Living"></i>Family details</h2>
    </div>
    <div class="col-md-6">
      <table class="table">
        <tbody>
          <tr>
            <td>Front Photo</td>
            <td><img src="<%= @property.property_list_family.front_photo rescue "" %>" style = "width: 200px;"></td>
          </tr>
          <tr>
            <td>List Price</td>
            <td>£<%= @property.property_list_family.list_price rescue "" %></td>
          </tr>
          <tr>
            <td>Price listed is</td>
            <td><% if @property.property_list_graduate.list_weekly %>
                Weekly
              <% else %>
                Monthly
              <% end %>
            </td>
          </tr>
          <tr>
            <td>Let available date</td>
            <td><%= !@property.property_list_family.let_available_date.nil? ? (l @property.property_list_family.let_available_date, format: :long) : "" %></td>
          </tr>
          <tr>
            <td>Deposit</td>
            <td>£<%= @property.property_list_family.deposit rescue "" %></td>
          </tr>
          <tr>
            <td>Minimum term (in months)</td>
            <td><%= @property.property_list_family.minimum_term rescue "" %></td>
          </tr>
          <tr>
            <td>Location</td>
            <td><%= @property.property_list_family.location rescue "" %></td>
          </tr>
          <tr>
            <td>School</td>
            <td><%= @property.property_list_family.school rescue "" %></td>
          </tr>
          <tr>
            <td>Nearest park and play area</td>
            <td><%= @property.property_list_family.nearest_park_and_play_area rescue "" %></td>
          </tr>
          <tr>
            <td>Area family location</td>
            <td><%= @property.property_list_family.area_family_location rescue "" %></td>
          </tr>
        </tbody>
      </table>
    </div>
    <div class="col-md-6">
      <table class="table">
        <tbody>
          <tr>
            <td colspan="2">Description</td>
          </tr>
          <tr>
            <td colspan="2" style="font-weight: normal"><%= @property.property_list_family.description rescue "" %></td>
          </tr>
          <% if @property.property_list_family.additional_features_1.present? %>
            <tr>
              <td>Additional feature 1</td>
              <td><%= @property.property_list_family.additional_features_1 rescue "" %></td>
            </tr>
          <% end %>
          <% if @property.property_list_family.additional_features_2.present? %>
            <tr>
              <td>Additional feature 2</td>
              <td><%= @property.property_list_family.additional_features_2 rescue "" %></td>
            </tr>
          <% end %>
          <% if @property.property_list_family.additional_features_3.present? %>
            <tr>
              <td>Additional feature 3</td>
              <td><%= @property.property_list_family.additional_features_3 rescue "" %></td>
            </tr>
          <% end %>
          <% if @property.property_list_family.additional_features_4.present? %>
            <tr>
              <td>Additional feature 4</td>
              <td><%= @property.property_list_family.additional_features_4 rescue "" %></td>
            </tr>
          <% end %>
          <% if @property.property_list_family.additional_features_5.present? %>
            <tr>
              <td>Additional feature 5</td>
              <td><%= @property.property_list_family.additional_features_5 rescue "" %></td>
            </tr>
          <% end %>
          <% if @property.property_list_family.additional_features_6.present? %>
            <tr>
              <td>Additional feature 6</td>
              <td><%= @property.property_list_family.additional_features_6 rescue "" %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</article>