<% content_for :title, 'Annual Rent Report' %>
<p id="notice"><%= notice %></p>
<div id="title-bar">
  <h1>Annual Rent Report</h1>
  <div class="actions push">
    <div class="badges btn-group d-flex w-100 mb-3">
      <% business_years.each do |year| %>
        <%= link_to year, annual_rent_report_path(year: year), class: "badge badge-#{year == @year ? 'primary' : 'secondary'} btn-filter-expense" %>
      <% end %>
    </div>
    <div>
      <%= link_to 'Back', reporting_index_path, class: 'btn btn-secondary' %>
      <%= link_to print_annual_rent_report_path(year: @year), class: "btn btn-primary", target: "_blank" do %>
        <i class="fas fa-print"></i>
      <% end %>
    </div>
  </div>
</div>


