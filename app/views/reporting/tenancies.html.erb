<% content_for :title, 'Notice Tenancies' %>
<p id="notice"><%= notice %></p>
<div id="title-bar" class="sticky-top">
  <h1>Tenancies List</h1>
  <div class="actions d-flex btn-froup justify-content-end push">
    <%= link_to 'Back', :back, class: 'btn btn-secondary' %>
  </div>
</div>
<%= puts @filterrific.inspect %>
<%= form_for_filterrific @filterrific, html: {class: 'filterrific-form'} do |f| %>
  <nav class="navbar navbar-expand-lg navbar-light">
    <h3 class="d-block d-lg-none">Tenancies</h3>
    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
      <i class="fa fa-bars"></i>
    </button>
    <div class="collapse navbar-collapse" id="navbarSupportedContent">
      <div class="row w-100 m-0">
        <div class="col">
          <span>Search</span>
          <%= f.text_field(
            :search_query,
            class: 'filterrific-periodically-observed form-control'
          ) %>
        </div>
        <div class="col">
          <span>
            Sort by
          </span>
          <%= f.select(:sorted_by, @filterrific.select_options[:sorted_by], {}, {class: 'form-control'}) %>
        </div>
        <div class="col text-right">
          <%= link_to 'Reset filters', reset_filterrific_url, class: 'btn btn-arsenic' %>
        </div>
      </div>
    </div>
  </nav>
<% end %>
<%= render( partial: 'tenancies/list', locals: { tenancies: @tenancies } ) %>
