<p id="notice"><%= notice %></p>

<div id="title-bar" class="sticky-top">
  <h1><%= t('.title') %></h1>
  <%= link_to t('.new'), new_tenant_path, class: 'btn btn-primary push' %>
</div>

<table class="table table-striped">
  <thead>
    <tr>
      <th>First name</th>
      <th>Surname</th>
      <th>Mobile number</th>
      <th>Email</th>
      <th>Nationality</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @tenants.each do |tenant| %>
      <tr>
        <td><%= tenant.first_name %></td>
        <td><%= tenant.surname %></td>
        <td><%= tenant.mobile_number %></td>
        <td><%= tenant.email %></td>
        <td><%= tenant.nationality %></td>
        <td><%= link_to (fa_icon 'search'), tenant %></td>
        <td><%= link_to (fa_icon 'edit'), edit_tenant_path(tenant) %></td>
        <td><%= link_to (fa_icon 'trash'), tenant, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
